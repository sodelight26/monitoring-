{
  "uid": "cadvisor-basic",
  "title": "Containers Overview (cAdvisor) - Basic",
  "timezone": "browser",
  "schemaVersion": 39,
  "version": 1,
  "refresh": "10s",
  "tags": ["docker", "containers", "cadvisor", "basic"],
  "time": { "from": "now-1h", "to": "now" },
  "panels": [
    {
      "type": "timeseries",
      "title": "Container CPU (cores)",
      "gridPos": { "x": 0, "y": 0, "w": 12, "h": 8 },
      "datasource": { "type": "prometheus", "uid": "prometheus_ds" },
      "targets": [
        {
          "refId": "A",
          "expr": "sum(rate(container_cpu_usage_seconds_total{container!=\"\", image!=\"\"}[5m])) by (name)",
          "legendFormat": "{{name}}"
        }
      ],
      "fieldConfig": { "defaults": { "unit": "cores" }, "overrides": [] }
    },
    {
      "type": "timeseries",
      "title": "Container Memory (bytes)",
      "gridPos": { "x": 12, "y": 0, "w": 12, "h": 8 },
      "datasource": { "type": "prometheus", "uid": "prometheus_ds" },
      "targets": [
        {
          "refId": "A",
          "expr": "sum(container_memory_working_set_bytes{container!=\"\", image!=\"\"}) by (name)",
          "legendFormat": "{{name}}"
        }
      ],
      "fieldConfig": { "defaults": { "unit": "bytes" }, "overrides": [] }
    },
    {
      "type": "timeseries",
      "title": "Container Network RX/TX (bytes/s)",
      "gridPos": { "x": 0, "y": 8, "w": 24, "h": 8 },
      "datasource": { "type": "prometheus", "uid": "prometheus_ds" },
      "targets": [
        {
          "refId": "A",
          "expr": "sum(rate(container_network_receive_bytes_total{name!=\"\"}[5m])) by (name)",
          "legendFormat": "{{name}} RX"
        },
        {
          "refId": "B",
          "expr": "sum(rate(container_network_transmit_bytes_total{name!=\"\"}[5m])) by (name)",
          "legendFormat": "{{name}} TX"
        }
      ],
      "fieldConfig": { "defaults": { "unit": "Bps" }, "overrides": [] }
    }
  ]
}
